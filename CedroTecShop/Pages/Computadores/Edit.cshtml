@page
@using Computadores
@model Computadores.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar</h2>

<h4>Computador</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Computador.ID" />
            <div class="form-group">
                <label asp-for="Computador.Descricao" class="control-label"></label>
                <input asp-for="Computador.Descricao" class="form-control" />
                <span asp-validation-for="Computador.Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Computador.Preco" class="control-label"></label>
                <input asp-for="Computador.Preco" class="form-control" />
                <span asp-validation-for="Computador.Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Retornar ao Cadastrar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
