<h2>Shop</h2>

<p>
    <a> Adicionar ao Carrinho</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Computadores[0].Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Computadores[0].Preco)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Computadores) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                <button type="button" onclick='adicionaAoCarinho(@Json.Serialize(item))'>Adicionar ao carrinho</button>
            </td>
        </tr>
    }
    </tbody>
</table>

